{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Pipeline",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "schedule": {
      "type": "string",
      "anyOf": [
        {
          "enum": [
            "hourly",
            "daily",
            "weekly",
            "monthly",
            "yearly"
          ]
        },
        {
          "type": "string",
          "description": "Cron expression format: minute hour day month weekday.\n\nExamples:\n- `0 20 * * *`: Every day at 8:00 PM\n- `30 17 * * *`: Every day at 5:30 PM\n- `0 20 * * 1-5`: Every weekday at 8:00 PM\n- `0 20 * * 6,7`: Every weekend at 8:00 PM\n- `0 20 10 7 *`: Every July 10th at 8:00 PM\n\nRefer to standard cron documentation for more details."
        }
      ],
      "default": "daily",
      "description": "Default schedule value"
    },
    "default_connections": {
      "type": "object",
      "properties": {
        "google_cloud_platform": {
          "type": "string"
        },
        "snowflake": {
          "type": "string"
        },
        "postgres": {
          "type": "string"
        },
        "redshift": {
          "type": "string"
        },
        "mssql": {
          "type": "string"
        },
        "synapse": {
          "type": "string"
        },
        "mongo": {
          "type": "string"
        },
        "mysql": {
          "type": "string"
        },
        "notion": {
          "type": "string"
        },
        "hana": {
          "type": "string"
        },
        "shopify": {
          "type": "string"
        },
        "gorgias": {
          "type": "string"
        },
        "generic": {
          "type": "string"
        }
      },
      "additionalProperties": true
    },
    "id": {
      "type": "string"
    },
    "start_date": {
      "type": "string",
      "default": "2024-07-23",
      "description": "The start date of the pipeline in YYYY-MM-DD format."
    },
    "default_parameters": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    },
    "notifications": {
      "type": "object",
      "properties": {
        "slack": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "channel": {
                "type": "string"
              }
            },
            "required": [
              "channel"
            ]
          }
        },
        "teams": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "webhook_url": {
                "type": "string",
                "description": "Microsoft Teams webhook URL"
              }
            },
            "required": [
              "webhook_url"
            ]
          }
        }
      },
      "additionalProperties": true
    },
    "catchup": {
      "type": "boolean",
      "default": "true"
    },
    "retries": {
      "type": "integer"
    }
  },
  "oneOf": [
    {
      "type": "object",
      "required": [
        "name"
      ],
      "not": {
        "required": [
          "id"
        ]
      }
    },
    {
      "type": "object",
      "required": [
        "id"
      ],
      "not": {
        "required": [
          "name"
        ]
      }
    }
  ]
}