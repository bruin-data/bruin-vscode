        "sash.hoverBorder": "#06fac2",
        "statusBar.background": "#04c99c",
        "statusBar.foreground": "#15202b",
        "statusBarItem.hoverBackground": "#039775",
        "statusBarItem.remoteBackground": "#04c99c",
        "statusBarItem.remoteForeground": "#15202b",
