{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
      "name": {
        "type": "string"
      },
      "types": {
        "type": "string",
        "enum": ["bq.sql", "snowflake"]
      },
      "materialization": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": ["view", "table"]
          }
        },
        "required": ["type"]
      },
      "description": {
        "type": "string"
      },
      "columns": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "type": {
              "type": "string",
              "enum": ["integer", "varchar", "boolean", "date", "timestamp"]
            },
            "description": {
              "type": "string"
            },
            "primary_key": {
              "type": "boolean"
            },
            "update_on_merge": {
              "type": "boolean"
            },
            "checks": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "enum": ["not_null", "unique", "positive", "non_negative"]
                  }
                },
                "required": ["name"]
              }
            }
          },
          "required": ["name", "type"]
        }
      },
      "custom_checks": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "value": {
              "type": "integer"
            },
            "query": {
              "type": "string"
            }
          },
          "required": ["name", "query"]
        }
      }
    },
    "required": ["name"]
  }